# NVIDIA AI Model Access (You'll provide these)
NEMO_ENDPOINT=https://integrate.api.nvidia.com/v1
NEMO_API_KEY=your_nvidia_api_key_here

# Weather Service (I'll ask you which service you prefer)
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_SERVICE=openweathermap

# Places/Restaurant Search (Google Places, Yelp, etc.)
PLACES_API_KEY=your_places_api_key_here
PLACES_SERVICE=google_places

# Calendar Integration (Google Calendar)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REFRESH_TOKEN=your_refresh_token_here
DEFAULT_CALENDAR_ID=primary

# Notifications (SMS/Email)
NOTIFICATION_SERVICE=twilio
NOTIFICATION_API_KEY=your_notification_key_here
NOTIFICATION_FROM=your_phone_or_email_here

# Memory Storage (where agent remembers your preferences)
MEMORY_TYPE=file
MEMORY_PATH=./agent_memory.json

# User Preferences (your defaults)
DEFAULT_ZIP_CODE=10001
DEFAULT_RADIUS_MILES=5
DEFAULT_MAX_PRICE=3